<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgot_password"
    android:orientation="vertical"
    android:background="@drawable/background_setting">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:fontFamily="@font/chicle"
        android:gravity="center"
        android:text="Quên mật khẩu"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:paddingRight="40dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_enaill" />

        <EditText
            android:id="@+id/edt_email_forgotpassword"
            android:inputType="textEmailAddress"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:paddingLeft="10dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_laylaimlk"
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:textStyle="bold"
        android:fontFamily="@font/acme"
        android:textSize="20sp"
        android:paddingRight="30dp"
        android:textColor="@color/black"
        android:text="Lấy lại mật khẩu"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="230dp">
        <ImageView
            android:id="@+id/img_home_forgot_password"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/homeicon"
            />
    </LinearLayout>



</LinearLayout>