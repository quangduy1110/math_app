<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu"
    android:orientation="vertical"
    android:background="@drawable/bg_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">
        <ImageView
            android:id="@+id/img_dangxuat"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:src="@drawable/logo_singout"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/bt_lythuyet"
            android:layout_width="200dp"
            android:layout_height="81dp"
            android:text="Học Bài"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_wood"
            />

        <Button
            android:id="@+id/bt_luyentap"
            android:layout_width="200dp"
            android:layout_height="81dp"
            android:text="Luyện tập"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_wood"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/bt_kiemtra"
            android:layout_width="200dp"
            android:layout_height="81dp"
            android:text="Kiểm tra"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_wood"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp">

        <ImageView
            android:id="@+id/img_home_menu"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/homeicon"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>