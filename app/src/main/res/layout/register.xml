<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register"
    android:orientation="vertical"
    android:background="@drawable/background_setting">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:fontFamily="@font/acme"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:text="ĐĂNG KÝ"

            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="70dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_account"
                    />
                <EditText
                    android:id="@+id/edt_email_dki"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:maxLength="50"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_password"
                    android:paddingTop="23dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/edt_pass_dki"
                    android:layout_marginTop="20dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:hint="MẬT KHẨU"
                    android:maxLength="50"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:paddingLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>
<!--    </RelativeLayout>-->

    <TextView
        android:id="@+id/bt_tao_tai_khoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/alatsi"
        android:text="Tạo tài khoản"
        android:gravity="center"
        android:paddingRight="35dp"
        android:textColor="@color/black"
        android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="290dp">
            <ImageView
                android:id="@+id/img_home_dk"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/homeicon"
                />
        </LinearLayout>



</LinearLayout>