<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgr_question">

    <TextView
        android:id="@+id/tv_cauhoiso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cau"
        android:text="CÃ¢u:"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_speak"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/speak"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/tv_cauhoi_question"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="10dp"
            android:text="Questions_hinhhoc"
            android:textColor="#FF5722"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:src="@drawable/bg_question"/>

        <ImageView
            android:id="@+id/img_noidung"
            android:layout_width="360dp"
            android:layout_height="260dp"
            android:text="content_question"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/bt_da1qs"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/button_wood"
                    android:text="answer1"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/icon_true_da1"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_true"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/icon_false_da1"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_false"
                    android:visibility="invisible"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp">

                <Button

                    android:id="@+id/bt_da2qs"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/button_wood"
                    android:text="answer2"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/icon_true_da2"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_true"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/icon_false_da2"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_false"
                    android:visibility="invisible"/>
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button

                    android:id="@+id/bt_dapan3qs"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/button_wood"
                    android:text="answer3"
                    android:layout_marginRight="30dp"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/icon_true_da3"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_true"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/icon_false_da3"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_false"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp">

                <Button

                    android:id="@+id/bt_dapan4qs"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/button_wood"
                    android:text="answer4"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/icon_true_da4"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_true"
                    android:visibility="invisible"/>
                <Button
                    android:id="@+id/icon_false_da4"
                    android:layout_width="130dp"
                    android:layout_height="81dp"
                    android:background="@drawable/icon_false"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/btn_next"
            />
    </LinearLayout>

</LinearLayout>