<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".topcics"
    android:orientation="vertical"
    android:background="@drawable/background_cay">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="130dp">

          <FrameLayout
              android:layout_width="169dp"
              android:layout_height="170dp">

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/button_apple" />

              <TextView
                  android:id="@+id/tv_topic_tapdem"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tập đếm"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/white"
                  android:textSize="25sp"/>
          </FrameLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="235dp">

          <FrameLayout
              android:layout_width="169dp"
              android:layout_height="170dp">

              <ImageView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/button_apple" />

              <TextView
                  android:id="@+id/tv_topic_tinhnham"
                  android:layout_gravity="center"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Tính nhẩm"
                  android:layout_marginTop="10dp"
                  android:textColor="@color/white"
                  android:textSize="25sp"/>
          </FrameLayout>

      </LinearLayout>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp">

            <FrameLayout
                android:layout_width="169dp"
                android:layout_height="170dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bt_apple_horizontal" />

                <TextView
                    android:id="@+id/tv_topic_dovui"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đố vui"
                    android:paddingRight="50dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp">

            <FrameLayout
                android:layout_width="169dp"
                android:layout_height="170dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/button_apple" />

                <TextView
                    android:id="@+id/tv_topic_hinhhoc"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hình học"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="25sp"/>
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>