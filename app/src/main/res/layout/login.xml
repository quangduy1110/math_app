<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:orientation="vertical"
    android:background="@drawable/background_setting">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:fontFamily="@font/acme"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_account"
                   />
                <EditText
                    android:id="@+id/edt_email_dangnhap"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo_password"
                    android:paddingTop="23dp"
                    android:layout_marginTop="5dp"/>

                <EditText
                    android:id="@+id/edt_matkhau_dangnhap"
                    android:layout_marginTop="20dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:hint="MẬT KHẨU"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textSize="18sp"
                    android:paddingLeft="5dp"/>
            </LinearLayout>

        </LinearLayout>

<!--        <ImageView-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_width="162dp"-->
<!--            android:layout_height="167dp"-->
<!--            android:src="@drawable/logo_login2"-->
<!--            android:layout_marginLeft="5dp"/>-->

    </LinearLayout>


    <TextView
        android:id="@+id/bt_dangnhap"
        android:layout_width="311dp"
        android:layout_height="81dp"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_dki_chuacotk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có tài khoản? Đăng ký"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:gravity="center"
            android:textColor="#201E1E"
            android:textSize="18sp"
            android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/img_login_fb"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_fb"
            android:layout_marginRight="110dp"/>
        <ImageView
            android:id="@+id/img_login_gg"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_gg"
            android:layout_marginRight="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="140dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:id="@+id/img_home_login"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/homeicon"
            />
    </LinearLayout>



</LinearLayout>