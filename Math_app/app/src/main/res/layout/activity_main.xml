<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/background_cay">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:fontFamily="@font/chicle"
        android:gravity="center"
        android:text="VUI HỌC TOÁN"
        android:textColor="#221F1D"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="90dp"
        android:paddingTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="311dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/white"
                android:visibility="gone"/>

            <Button
                android:id="@+id/bt_dang_nhap"
                android:layout_marginTop="5dp"
                android:layout_width="311dp"
                android:layout_height="81dp"
                android:background="@drawable/custom_button"
                android:text="ĐĂNG Nhập"
                android:fontFamily="@font/acme"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:id="@+id/bt_dang_ky"
                android:layout_marginTop="5dp"
                android:layout_width="311dp"
                android:layout_height="81dp"
                android:background="@drawable/custom_button"
                android:text="ĐĂNG KÝ"
                android:fontFamily="@font/acme"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </LinearLayout>
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_dk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Chưa có tài khoản? bấm vào đây để đăng ký"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"/>


</LinearLayout>
